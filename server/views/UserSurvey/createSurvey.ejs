<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- /my-survey/create-survey -->
<!-- Crate My survey Content -->
<main class="containter">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <!-- Create Date and Expire Date-->
            <div>
                <h6><%= new Date(); %></h6>
            </div>
            <div>
                <form method="POST" autocomplete="off">
                    <h1>
                        <input type="text" id="ddsurveyTitle" name="surveyTitle" placeholder="Survey Title">
                    </h1>
                    <input type="text" name="exipireDate" id="ddexipireDate" placeholder="Expire Date">

                    <!-- user survey content-->

                    <div id="qContainer"></div>

                    <div class="d-flex btn-container">
                        <select name="add" id="add" size="3">
                            <option value="text" id="addTextInput">Text Answer</option>
                            <option value="oc" id="addOCInput">One Choice Answer</option>
                            <option value="mc" id="addMCInput">Multiple Choice Answer</option>
                        </select>
                        <button class="btn rounded-circle" id="addComponent">
                            <i class="fas fa-plus" id="plus"></i><i class="fas fa-sort-down" id="down"></i>
                        </button>
                    </div>


                    <button class="btn btn-outline-success" type="submit">
                        <i class="fas fa-edit"></i> Update</button>

                    <a href="/my-survey" class="btn btn-outline-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
                </form>
            </div>
        </div>
    </div>
</main>

